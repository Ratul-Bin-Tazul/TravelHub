<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/postItemCard"
    android:layout_margin="7dp"
    android:padding="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/postItemUserPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            app:civ_shadow_color="@color/colorPrimary"
            android:background="@color/fui_transparent"
            android:layout_margin="10dp"
            android:src="@drawable/ic_account_circle_grey600_48dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/postItemUserPic">
        <TextView
            android:id="@+id/postItemUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account username"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/postItemPostTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time " />
        </LinearLayout>
        <ImageButton
            android:id="@+id/postItemPostSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/fui_transparent"
            android:src="@drawable/ic_dots_horizontal_grey600_24dp"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/postItemStory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is some dummy text"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:id="@+id/postItemPictureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/postItemPic1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="3"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:id="@+id/postItemSmallPicLayout"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="3dp">
                <ImageView
                    android:id="@+id/postItemPic2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:id="@+id/postItemPic3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:id="@+id/postItemLastPicLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/postItemPic4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:foreground="#22000000"/>
                    <TextView
                        android:id="@+id/postItemMorePicNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="+no"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/postItemCountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/postItemNumberOfLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Love"
                android:layout_margin="10dp"
                android:textSize="11sp"/>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="."-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="24dp"-->
                <!--android:layout_marginTop="8dp"/>-->
            <TextView
                android:id="@+id/postItemNumberOfComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Comment"
                android:layout_margin="10dp"
                android:textSize="11sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/postItemLoveLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.like.LikeButton
                    app:icon_type="heart"
                    app:icon_size="20dp"
                    android:id="@+id/postItemLove"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="55dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="7dp" />
                <TextView
                    android:id="@+id/postItemLoveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="LOVE"
                    android:textSize="12sp"
                    android:textColor="@color/common_google_signin_btn_text_light_default"
                    android:paddingLeft="40dp"
                    android:layout_centerInParent="true"

                    />
            </RelativeLayout>
            <Button
                android:id="@+id/postItemComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/fui_transparent"
                android:text="comment"
                android:textSize="12sp"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/ic_comment_text_outline_grey600_24dp"/>

            <Button
                android:id="@+id/postItemShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/fui_transparent"
                android:text="share"
                android:textSize="12sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:drawableLeft="@drawable/ic_share_grey600_24dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>