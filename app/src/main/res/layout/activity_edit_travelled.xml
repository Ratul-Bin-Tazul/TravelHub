<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bdtravelblog.www.travelhub.Activity.EditTravelledActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your travelledList to:"/>
        <!--<TextView-->
            <!--android:id="@+id/editInterestsNoLabelText"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="None specified"-->
            <!--android:layout_marginTop="10dp"/>-->

        <com.dpizarro.autolabel.library.AutoLabelUI
            android:id="@+id/editTravelled_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:show_cross="true"
            app:text_color="@android:color/white"
            app:label_background_res="@color/colorPrimary"
            app:label_padding="10dp"
            android:layout_marginTop="10dp"
            app:label_clickable="true"
            android:layout_marginBottom="10dp"/>

        <android.support.v7.widget.CardView
            android:id="@+id/editTravelledPlaceSelectCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select in Google Map"
                android:layout_margin="15dp"
                android:drawableRight="@drawable/ic_map_marker_grey600_24dp"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
