<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IntroActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/intro_bg"
        android:scaleType="centerCrop"
        android:foreground="#77000000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/introLogo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/travelhub_logo_png"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_below="@id/introLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Travelhub"
            android:textColor="#fff"
            android:textSize="28sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Your very own travel assistant"
            android:textColor="#fff"
            android:textSize="16sp" />

        <Button
            android:id="@+id/introSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="Sign in"
            android:textColor="#fff"
            android:backgroundTint="@color/colorGrey"/>

        <Button
            android:id="@+id/introSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="Sign up"
            android:textColor="#fff"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>

</RelativeLayout>