<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bdtravelblog.www.travelhub.Activity.CommentActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/commentUserPic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="2dp"
                app:civ_shadow_color="@color/colorPrimary"
                android:background="@color/fui_transparent"
                android:layout_margin="10dp"
                android:src="@drawable/ic_account_circle_grey600_48dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/commentUserPic">
                <TextView
                    android:id="@+id/commentUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account username"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/commentPostTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time " />
            </LinearLayout>
            <ImageButton
                android:id="@+id/commentPostSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/fui_transparent"
                android:src="@drawable/ic_dots_horizontal_grey600_24dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/commentStory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is some dummy text"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:id="@+id/commentPictureLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/commentPic1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="3"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:id="@+id/commentSmallPicLayout"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="3dp">
                <ImageView
                    android:id="@+id/commentPic2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop" />
                <ImageView
                    android:id="@+id/commentPic3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"/>
                <RelativeLayout
                    android:id="@+id/commentLastPicLayout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/commentPic4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:foreground="#22000000"/>
                    <TextView
                        android:id="@+id/commentMorePicNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:text="+no"
                        android:textAlignment="center"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/commentCountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/commentNumberOfLove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Love"
                android:layout_margin="10dp"
                android:textSize="11sp"/>
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="."-->
            <!--android:textStyle="bold"-->
            <!--android:textSize="24dp"-->
            <!--android:layout_marginTop="8dp"/>-->
            <TextView
                android:id="@+id/commentNumberOfComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="# Comment"
                android:layout_margin="10dp"
                android:textSize="11sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/commentLoveLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <com.like.LikeButton
                    app:icon_type="heart"
                    app:icon_size="20dp"
                    android:id="@+id/commentLove"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="55dp"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="7dp" />
                <TextView
                    android:id="@+id/commentLoveText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="LOVE"
                    android:textSize="12sp"
                    android:textColor="@color/common_google_signin_btn_text_light_default"
                    android:paddingLeft="40dp"
                    android:layout_centerInParent="true"

                    />
            </RelativeLayout>
            <Button
                android:id="@+id/commentComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/fui_transparent"
                android:text="comment"
                android:textSize="12sp"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:layout_marginLeft="25dp"
                android:drawableLeft="@drawable/ic_comment_text_outline_grey600_24dp"/>

            <Button
                android:id="@+id/commentShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/fui_transparent"
                android:text="share"
                android:textSize="12sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/common_google_signin_btn_text_light_default"
                android:drawableLeft="@drawable/ic_share_grey600_24dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>

        <!--COMMENT LAYOUT-->
        <LinearLayout
            android:id="@+id/commentLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <!--<LinearLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal"-->
                <!--android:layout_marginBottom="10dp">-->
            <!--<android.support.v4.widget.CircleImageView-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:src="@drawable/ic_account_circle_grey600_24dp"/>-->
                <!--<LinearLayout-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:orientation="vertical">-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="username"-->
                    <!--android:textStyle="bold"-->
                    <!--android:layout_marginTop="10dp"/>-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="This is a very long comment just used as a placeholder" />-->
                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="time"-->
                        <!--android:layout_marginTop="5dp"/>-->
                <!--</LinearLayout>-->
            <!--</LinearLayout>-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/commentEditbox"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="Write a comment"
            android:backgroundTint="@color/fui_transparent"
            android:paddingLeft="10dp"
            android:layout_weight="5"/>
            <ImageButton
                android:id="@+id/commentSendComment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_send_grey600_24dp"
                android:background="@color/fui_transparent"
                android:layout_weight="1"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
